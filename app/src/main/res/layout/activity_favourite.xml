<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.varshayadv.musicalapp.Favourite">

    <TextView
        android:layout_width="550dp"
        android:layout_height="85dp"
        android:gravity="center"
        android:text="favourites"
        android:textAllCaps="true"
        android:textSize="36sp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="450dp"
        android:layout_height="105dp"
        android:paddingBottom="18dp"
        android:paddingLeft="8dp"
        android:paddingTop="18dp"
        android:text="here we have All favourite songs list :"
        android:textAllCaps="true"
        android:textColor="#009688"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/shapeOfYou"
        android:layout_width="450dp"
        android:layout_height="75dp"
        android:paddingBottom="18dp"
        android:paddingLeft="8dp"
        android:paddingTop="18dp"
        android:text="shape of you"
        android:textAllCaps="true"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/cheapThrills"
        android:layout_width="450dp"
        android:layout_height="75dp"
        android:paddingBottom="18dp"
        android:paddingLeft="8dp"
        android:paddingTop="18dp"
        android:text="cheap thrills"
        android:textAllCaps="true"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/despacito"
        android:layout_width="450dp"
        android:layout_height="75dp"
        android:paddingBottom="18dp"
        android:paddingLeft="8dp"
        android:paddingTop="18dp"
        android:text="despactio"
        android:textAllCaps="true"
        android:textSize="26sp" />

    <Button
        android:id="@+id/Favourite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_orange_light"
        android:onClick="details"
        android:paddingTop="18dp"
        android:text="click to open Radio station list"
        android:textAllCaps="true"
        android:textSize="26sp" />


</LinearLayout>
