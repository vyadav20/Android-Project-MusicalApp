<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.varshayadv.musicalapp.Albums">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="albums"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/brief"
        android:layout_width="450dp"
        android:layout_height="120dp"
        android:paddingBottom="18dp"
        android:paddingLeft="8dp"
        android:paddingTop="18dp"
        android:text="Here we have list of all the albums :"
        android:textAllCaps="true"
        android:textColor="#FF4500"
        android:textSize="30sp" />


    <TextView
        android:id="@+id/album1"
        android:layout_width="450dp"
        android:layout_height="75dp"
        android:paddingBottom="18dp"
        android:paddingLeft="8dp"
        android:paddingTop="18dp"
        android:text="album1"
        android:textAllCaps="true"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/album2"
        android:layout_width="450dp"
        android:layout_height="75dp"
        android:paddingBottom="18dp"
        android:paddingLeft="8dp"
        android:paddingTop="18dp"
        android:text="album2"
        android:textAllCaps="true"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/album3"
        android:layout_width="450dp"
        android:layout_height="75dp"
        android:paddingBottom="18dp"
        android:paddingLeft="8dp"
        android:paddingTop="18dp"
        android:text="album3"
        android:textAllCaps="true"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/album4"
        android:layout_width="450dp"
        android:layout_height="75dp"
        android:paddingBottom="18dp"
        android:paddingLeft="8dp"
        android:paddingTop="18dp"
        android:text="album4"
        android:textAllCaps="true"
        android:textSize="26sp" />

    <Button
        android:id="@+id/Albums"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_orange_light"
        android:onClick="details"
        android:paddingTop="18dp"
        android:text="click to open favourite songs list"
        android:textAllCaps="true"
        android:textSize="26sp" />


</LinearLayout>
